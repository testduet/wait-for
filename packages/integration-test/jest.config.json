{
  "testMatch": ["**/__tests__/**/*.?([cm])[jt]s?(x)", "**/?(*.)+(spec|test).?([cm])[jt]s?(x)"],
  "transform": {
    "\\.c?jsx?$": ["babel-jest"],
    "\\.mjsx?$": [
      "babel-jest",
      {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "targets": "defaults"
            }
          ]
        ]
      }
    ]
  }
}
